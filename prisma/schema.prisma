generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  image     String?
  guests    Guest[]  @relation("UserGuests")
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Guest {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?  @unique
  present   Boolean  @default(false)
  adminId   Int?
  admin     User?    @relation("UserGuests", fields: [adminId], references: [id])
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
